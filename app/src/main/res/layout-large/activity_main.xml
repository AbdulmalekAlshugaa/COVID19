<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/covid_19_world_statistics"
            android:fontFamily="@font/googlesans_bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_margin="20dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/gray"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="@string/worldwide"
                        android:fontFamily="@font/googlesans_bold"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        />


                    <ProgressBar
                        android:id="@+id/google_progress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_gravity="center"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:id="@+id/paymentContiner"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:textSize="14sp"
                        android:lines="1"
                        android:text="@string/confirmed"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:textSize="14sp"
                        android:lines="1"
                        android:text="@string/recovered"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:textSize="14sp"
                        android:lines="1"
                        android:text="@string/deaths"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"

                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/Total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:textSize="20sp"
                        android:lines="1"
                        android:text="@string/_00000"
                        android:textColor="@color/Blue"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/Recovired"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:textSize="20sp"
                        android:lines="1"
                        android:text="@string/_0000"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/Deaths"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:textSize="20sp"
                        android:lines="1"
                        android:text="@string/_0000"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:padding="10dp"
                        />


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="12dp"
                        android:onClick="Statics"
                        android:clickable="true"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/career"
                                android:layout_marginTop="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/statistics"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        android:onClick="Preventive"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/medical"
                                android:layout_marginTop="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/preventive_healthcare"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >

                    <androidx.cardview.widget.CardView
                        android:onClick="Symptoic"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:clickable="true"
                        app:cardCornerRadius="12dp"
                        android:layout_weight="50"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/coughing"
                                android:layout_marginTop="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/symptoms"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="News"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:clickable="true"
                        app:cardCornerRadius="12dp"
                        android:layout_weight="50"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/images"
                                android:layout_marginTop="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/news"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:onClick="Suggestion"
                        android:layout_height="170dp"
                        app:cardCornerRadius="12dp"
                        android:clickable="true"
                        android:layout_weight="50"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/suggestion"
                                android:layout_marginTop="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/suggestion"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        app:cardCornerRadius="12dp"
                        android:clickable="true"
                        app:cardElevation="5dp"
                        android:layout_weight="50"
                        android:onClick="BMI"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/download"
                                android:layout_marginTop="18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calculate_bmi"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>









