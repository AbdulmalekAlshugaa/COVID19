<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SaplahScreen">

    <LinearLayout
        android:id="@+id/titleimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="140sp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/covidjpg"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/titletxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            app:fontFamily="@font/monotonregular"
            android:id="@+id/splashText"
            android:layout_width="300sp"
            android:layout_height="37dp"
            android:text="@string/covid19"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="20dp"
            android:textColor="@color/white"/>

        <TextView

            android:id="@+id/splashDesc"
            android:layout_margin="20dp"
            android:layout_width="500sp"
            android:layout_height="37sp"
            android:layout_gravity="center"
            android:text="@string/get_the_latest_update_of_the_covid19"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontFamily="@font/reeniebeanie"/>

    </LinearLayout>

</LinearLayout>